<%# if current_user isnt friends with someone, show befriend button %>

<%= link_to user_path(user.id) do %>
  <div class="user-container">
    <div class="user-info" >
      <p class="name"><%= user.name %></p>
      <p class="email"><%= user.email %></p>
    </div>
    <div class="user-buttons">
      <% if logged_in? %>
        <%  if @current_user == user %>
          <p>Hey it's you!</p>
        <%  elsif !@current_user.friends.include?(user) %>
          <%= link_to "Add friend!",request_friend_path(friend_id: user.id),
            method: :post,
            class: "button is-link is-pulled-right" %>
        <% else %>
          <p>This is your friend!</p>
          <%= link_to "Remove friend", remove_friend_path(friend_id: user.id),
            method: :delete,
            class: "button is-link is-pulled-right" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <%#= link_to :div,"Befriend", add_friend_path(user), method: :post, class: "button is-link" %>

<% end %>
