<div class="signup-form">

  <%= form_with(model: @user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%# bulma bits from here: https://bulma.io/documentation/form/general/ %>
    <div class="field">
      <%= f.label "Name: ", class: "label" %>
      <div class="control has-icons-left">
        <%= f.text_field :name, class: "input" %>
        <span class="icon is-small is-left">
          <i class="fas fa-user"></i>
        </span>
      </div>

    </div>
    <%= f.label "Email: ", class: "label" %>
    <div class="control has-icons-left">
      <%= f.text_field :email, class: "input" %>
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
    <div class="control">

    </div>
    <%= f.label "Password: ", class: "label" %>
    <%= f.text_field :password, class: "input" %>
    <%= f.label "Password confirmation: ", class: "label" %>
    <%= f.text_field :password_confirmation, class: "input" %>
    <%= f.submit "Sign up!", class: "button is-link mt-4" %>
  <% end %>
</div>
