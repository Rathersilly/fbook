<figure class="image is-128x128">
  <%# image_tag "pic.jpg", alt: "User Photo" %>
</figure>

<%= content_tag :h1, "#{@user.name}'s Profile" %>
<%= content_tag :h1, "#{@user.name}'s Friends" %>
<% if @user.friends.any? %>
<% @user.friends.each do |friend| %>
  <%= render 'user', user: friend %>
<% end %>
<% else %>
  <%= content_tag :p, "You don't have any friends?!?" %> 
<% end %>



